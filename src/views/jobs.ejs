<div class="flex justify-start flex-wrap flex-grow-0 align-middle p-3 m-5">

    <% jobs.forEach(job=>{%>
        <div class="w-[300px] h-[350px] rounded-md border-[2.5px] border-slate-800 my-3 mx-5 p-4 flex flex-col">
            <div class="p-1 h-[22%]">
              <h1 class="inline-flex items-center text-lg font-semibold">
                <%= job.role %> opportunity.
               
              </h1>
            </div>
            <div class="mt-4 flex justify-start flex-wrap flex-grow-0 h-[25%]">
              <% job.requirements.forEach(requ=>{%>
                  <span class="mb-2 mr-2 h-fit inline-block rounded-full bg-gray-100 px-3 
                  py-1 text-[10px] font-semibold text-gray-900">
                      #<%= requ %>
                  </span>
                  
              <%}) %>
            </div>
            <div class="h-[32%]">
              <div>Location: <%= job.location %></div>
              <div>Salary: <%= job.salary %></div>
              <div>Applicants: <%= job.getTotalApplicants() %></div>
            </div>
            <div class="h-[10%]">
              <button
                type="button"
                class="mt-4 w-full rounded-sm bg-black px-2 py-1.5 text-sm font-semibold
                 text-white shadow-sm hover:bg-black/80 focus-visible:outline focus-visible:outline-2 
                 focus-visible:outline-offset-2 focus-visible:outline-black"
                
              >
               <a href='/:jobId/apply'> Apply</a>
              </button>
            </div>
          </div>
        
    <%})%>

</div>
