<div class="flex flex-wrap justify-start align-middle p-3 m-5">

    <% jobs.forEach(job=>{%>
        <div class="w-[300px] rounded-md border my-3 mr-3">
            <div class="p-4">
              <h1 class="inline-flex items-center text-lg font-semibold">
                <%= job.role %> opportunity.
              </h1>
              <div class="mt-4 flex flex-wrap">
                <% job.requirements.forEach(requ=>{%>
                    <span class="mb-2 mr-2 inline-block rounded-full bg-gray-100 px-3 py-1 text-[10px] font-semibold text-gray-900">
                        #<%= requ %>
                    </span>
                    
                <%}) %>
              </div>
              <div>Location: <%= job.location %></div>
              <div>Salary: <%= job.salary %></div>
              <button
                type="button"
                class="mt-4 w-full rounded-sm bg-black px-2 py-1.5 text-sm font-semibold
                 text-white shadow-sm hover:bg-black/80 focus-visible:outline focus-visible:outline-2 
                 focus-visible:outline-offset-2 focus-visible:outline-black"
              >
               <a href='/applicants/<%= job.id %>'> Applicants: <%= job.getTotalApplicants() %></a>
              </button>
              <button
                  type="button"
                  class="mt-4 w-full rounded-sm bg-black px-2 py-1.5 text-sm font-semibold
                  text-white shadow-sm hover:bg-black/80 focus-visible:outline focus-visible:outline-2 
                  focus-visible:outline-offset-2 focus-visible:outline-black"
              >
                  <a href='/edit/<%= job.id %>' class="text-white"> Edit</a>
              </button>
            </div>
          </div>
        
    <%})%>

</div>
